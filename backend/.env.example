# Django settings
SECRET_KEY=your-secret-key-change-in-production
DEBUG=False

# Database (Railway provides DATABASE_URL automatically)
# For local development, use individual settings:
DB_NAME=tindler_bc
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
# For production, Railway sets DATABASE_URL automatically

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,api.icelatte.co

# CSRF Trusted Origins (comma-separated, include https://)
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,https://icelatte.co,https://api.icelatte.co

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,https://icelatte.co

# Google OAuth (set up at https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend URL (for OAuth redirects)
FRONTEND_URL=https://icelatte.co

# Email settings (optional - uses console backend in development)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=BC Coffee Chat <noreply@icelatte.co>
